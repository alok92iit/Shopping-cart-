<% layout("/layouts/boilerPlate") -%>
<div class="container">
    <%- include('../partials/flash')  %> 
</div>

<div class="row mt-5">
   
    <div class="col-md-6 mx-auto">
        <form action="/products" method="POST" class="validated-new-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Name : </label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Product Name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image URL</label>
                <input class="form-control" type="text" name="img" id="img" placeholder="Product Image URL" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" name="price" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>  
            </div>
            <div class="mb-3 " >
                <p class="mb-2">Category Of Product</p>
                <div class="mx-2" >
                    <label class="form-label" for="seller">elctronics</label>
                    <input class="form-check-input mt-0" type="radio" name="role" value="elctronics" id="elctronics" aria-label="Radio button for following text input" required>
                </div>
                <div class="mx-2" >
                    <label class="form-label" for="seller">jewelery</label>
                    <input class="form-check-input mt-0" type="radio" name="role" value="jewelery" id="jewelery" aria-label="Radio button for following text input" required>
                </div>
                <div class="mx-2" >
                    <label class="form-label" for="seller">men</label>
                    <input class="form-check-input mt-0" type="radio" name="role" value="men" id="men" aria-label="Radio button for following text input" required>
                </div>
                <div class="mx-2">
                    <label class="form-label" for="buyer">women</label>
                    <input class="form-check-input mt-0" type="radio" name="role" value="women"  id="women" aria-label="Radio button for following text input" required>
                </div>
               
            </div>
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc" rows="5" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Add</button>
        </form>
    </div>
</div>
